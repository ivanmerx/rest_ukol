<Page x:Class="REST.VytvoritUzivatele"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:REST"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" Background="White"
      Title="VytvoritUzivatele">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Jmeno"/>
            <TextBox x:Name="jmeno"/>
            <Label Content="Prijmeni"/>
            <TextBox x:Name="prijmeni"/>
            <Label Content="Rod_cislo"/>
            <TextBox x:Name="rod_cislo"/>
            <Label Content="Dat_nar"/>
            <TextBox x:Name="dat_nar"/>
            <Label Content="Pohlavi"/>
            <TextBox x:Name="pohlavi"/>
            <WrapPanel>
                <Button x:Name="ulozit" Content="Vytvorit" Margin="40,0,0,0" Click="vytvorit_click"></Button>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Page>
